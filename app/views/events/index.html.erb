<% @pagetitle = "Events" %>

<h1>Events</h1>

<dl>

<% for event in @events %>
<dt> <%= link_to event.term, event %>
(<%= link_to 'Show', event %>
<%= link_to 'Edit', edit_event_path(event) %>
<%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %>)
</dt>
<dd> 
Date: <%= event.date %>
<br />
Comment: <%= event.comment %>
</dd>
<% end %>

</dl>

<%= link_to 'New event', new_event_path %>
