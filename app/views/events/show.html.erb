<% @pagetitle = "Event: #{@event.term}" %>

<h1><%= @event.term %></h1>

<%= link_to 'Edit', edit_event_path(@event) %>

<ul>

<li> Date: <%= @event.date %>
</li>

<li> Comment: <%= @event.comment %>
</li>

</ul>

<p>

Works:

</p>

<ul>

<% @event.works.each do |w| %>

<li> <%= link_to "#{w.title}",
  :controller => "works",
  :action     => "show",
  :id         => w.id %>
</li>

<% end %>

</ul>

