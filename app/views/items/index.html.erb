<h1>Listing items</h1>

<table>
  <tr>
    <% for column in Item.content_columns %>
    <th><%=h column.name %></th>
    <% end %>
    <th></th> <th></th> <th></th> 
  </tr>

<% for item in @items %>
  <tr>
    <% for column in Item.content_columns %>
    <td><%=h item.send(column.name) %></td>
    <% end %>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

