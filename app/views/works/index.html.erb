<h1>Listing works</h1>

<table>
  <tr>
    <% for column in Work.content_columns %>
    <th><%=h column.name %></th>
    <% end %>
    <th></th> <th></th> <th></th> 
  </tr>

<% for work in @works %>
  <tr>
    <% for column in Work.content_columns %>
    <td><%=h work.send(column.name) %></td>
    <% end %>
    <td><%= link_to 'Show', work %></td>
    <td><%= link_to 'Edit', edit_work_path(work) %></td>
    <td><%= link_to 'Destroy', work, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

