<% @pagetitle = "Work: " + @work.title %>

<!-- Work -->

<h1>Work: <cite><%= @work.title %></cite></h1>

<p>

Created by:

</p>

<ul>

<% @work.people.each do |p| %>

<li> <%= link_to "#{p.name}",
                 :controller => "people",
                 :action     => "show",
                 :id         => p.id %>
</li>

<% end %>

<% @work.corporate_bodies.each do |c| %>

<li> <%= link_to "#{c.name}",
                 :controller => "corporate_bodies",
                 :action     => "show",
                 :id         => c.id %>
</li>

<% end %>

</ul>


<p>

Attributes:

</p>

<ul>

<li> Form: <%= @work.form %>
</li>

<li> Date: <%= @work.date %>
</li>

<li> Comment: <%= @work.comment %>
</li>

</ul>

<h2>Expressions</h2>

<p>

<%= link_to "Add expression for this work",
  :controller => "expressions",
  :action     => "new",
  :work_id    => @work.id %>

</p>

<ul>

<% @work.expressions.each do |expression| %>

<li> <%= link_to "<cite>#{expression.title}</cite>",
                 :controller => "expressions",
                 :action     => "show",
                 :id         => expression.id %>
(<%= expression.language %>, <%= expression.form %>)
</li>

<% end %>

</ul>


<%= link_to 'Edit', edit_work_path(@work) %> |
<%= link_to 'Back', works_path %>
